{
  "name": "web-app",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s clean build:all-envs",
    "build:client": "vite build",
    "build:server": "tsc --noEmit false --project server/tsconfig.json --outDir dist/$ENVIRONMENT",
    "build:app": "run-p build:client build:server",
    "build:development": "env-cmd -f client/.env.local.development run-s build:app",
    "build:staging": "env-cmd -f client/.env.cloud.staging run-s build:app",
    "build:production": "env-cmd -f client/.env.cloud.production run-s build:app",
    "build:all-envs": "NODE_ENV=production run-p build:development build:staging build:production",
    "ci:upload-static-assets": "node script/upload-static-assets.js",
    "clean": "rm -rf dist",
    "dev": "NODE_ENV=development env-cmd -f client/.env.local.development tsx server/server.ts",
    "format:client": "prettier ./client/**/*.{css,js,json,ts,tsx} --write",
    "format:script": "prettier ./script/**/*.js --write",
    "format:server": "prettier ./server/**/*.{js,json,ts} --write",
    "format": "run-p format:*",
    "lint": "run-p --continue-on-error lint:*",
    "lint:js": "eslint .",
    "start:production": "ENVIRONMENT=production NODE_ENV=production node dist/production/server/server.js",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@market/react": "^6.1.0",
    "@squareup/service-container": "^1.0.7",
    "aws-sdk": "^2.1194.0",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "glob": "^8.0.3",
    "mime": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/parser": "^5.33.0",
    "@vitejs/plugin-react": "^4.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-square": "^23.0.2",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "tsx": "^3.8.0",
    "typescript": "^4.6.4",
    "vite": "^4.3.0",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^0.34.3"
  }
}
